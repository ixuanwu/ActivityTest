<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="220dp"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/log_tag"
        android:textColor="@color/color_log_cat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#b1f18707"
        android:padding="5dp"
        android:gravity="center"
        android:text="操作日志" />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:background="#dadad5"
        android:scrollbars="vertical"
        android:fadingEdge="vertical">
        <TextView
            android:id="@+id/log_content"
            android:textColor="@color/color_log_cat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""/>
    </ScrollView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/log_close"
            android:layout_width="0dp"
            android:textColor="@color/color_log_cat"
            android:gravity="center"
            android:background="#aab0c9"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:text="关闭" />

        <Button
            android:id="@+id/log_clear"
            android:layout_width="0dp"
            android:gravity="center"
            android:layout_marginLeft="3dp"
            android:background="#aab0c9"
            android:textColor="@color/color_log_cat"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:text="清理" />
    </LinearLayout>

</LinearLayout>